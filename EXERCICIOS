A)
# include < stdio .h >
int main () {
  float a, b, c;
  printf (“Digite tres numeros quaisquer: ”);
  scanf (“%f%f%f”, &a, &b, &c)
  printf (“Seus números de trás para frente são:%f%f%f\n", c, b, a)
  return 0;
} 

B)
# include < stdio .h >
int main () {
  char nome;
  printf ("Olá eu sou o Nº 1, como é seu nome?");
  scanf (“%c”, &nome);
  printf ("Bem-vindo ao clube %c", nome);
  return 0;
} 

C)
# include < stdio .h >
int main () {
  char nome;
  float idade, dias;
  printf (“Por favor, insira seu nome e idade, respectivamente: ”);
  scanf (“%c, %f”, &nome, &idade);
  
  //Cálculo da idade
  dias = idade*365;
  printf (“Sua idade em dias eh:%f ”, &dias);
  return 0;
} 

D)
# include < stdio .h >
int main () {
  float raio;
  float pi = 3.14;
  printf (“Informe o valor do raio: ”);
  scanf (“%f”, &raio);
  
  //Cálculo do área da circunferência
  area = pi*(raio*raio);
  printf (“A área da circunferência é:%f”, &area);
  return 0;
} 
E)
# include < stdio .h >
int main () {
  float L, h, area;
  printf (“Informe a largura da parede em metros: ”);
  scanf (“%f”, &L);
  printf (“Informe a altura da parede em metros: ”);
  scanf (“%f”, &h);
  
  //Cálculos
  area = L*h;
  latas  = (area *300)/2000;
  printf (“A quantidade de latas necessárias eh:%f”, &latas);
return 0;
}

F)
# include < stdio .h >
int main () {
  float F, C;
  printf (“Informe a temperatura em graus Fahrenheit: ”);
  scanf (“%f”, &F);
  
  //Cálculo
  C=(5/9)(F-32);
  printf (“A temperatura em graus Centígrados eh:%f”, &C);
  return 0;
} 

G) 
# include < stdio .h >
int main () {
  float P, V, T, M;
  printf (“Informe os valores da pressão, do volume e da temperatura respectivamente:”);
  scanf (“%f%f%f”, &P, &V, &T);
  
  //Cálculos
  M = (P*V)/(0.37*(T+460));
  printf (“A massa de ar do pneu eh:%f ”, &M);
  return 0;
} 

H)
# include < stdio .h >
int main () {
  float a1, r, n, aN;
  printf (“Informe o primeiro termo de sua PA: ”);
  scanf (“%f”, &a1);
  printf (“Informe a razão de sua PA: ”);
  scanf (“%f”, &r);
  printf (“Informe o numero de termos de sua PA: ”);
  scanf (“%f”, &n);

  //Cálculos
  aN = a1 - ( (n - 1)*r );
  printf (“O N-ésimo termo de sua PA eh:%f ”, &aN);
  return 0;
} 

I)
# include < stdio .h >
int main () {
  float a, b, c;
  printf (“Informe a variável A: ”);
  scanf (“%f”, &a);
  printf (“Informe a variável B: ”);
  scanf (“%f”, &b);
  printf (“Informe a variável C: ”);
  scanf (“%f”, &c);

  float x1, x2;
  //Cálculos
  x1 = - b + sqrt((pow(b,2) + (4*a*c)) / (2*a);
  x2 = - b + sqrt((pow(b,2) - (4*a*c)) / (2*a);

  printf (“As raízes da equação são:%f ”, &x1, &x2);
  return 0;
}

J)
# include < stdio .h >
int main () {
  float u, d, q, c;
  printf (“Informe a quantidade de moedas de 1 real: ”);
  scanf (“%”, &u);
  printf (“Informe a quantidade de notas de 10: ”);
  scanf (“%f”, &d);
  printf (“Informe a quantidade de notas de 50: ”);
  scanf (“%f”, &q);
  printf (“Informe a quantidade de notas de 100: ”);
  scanf (“%f”, &c);
  
  float soma;
  soma = u + (10*d) + (50*q) + (100*c);
  printf (“O valor total em reais eh:%f ”, &soma);
  return 0;
}


L)
#include <stdio.h>
Int main () {
  float valor;
  printf (“Informe o valor: ”);
  scanf (“%d”, &valor);
  float u, dq, d, q, c;
  
  //Calculos
  u = valor/1
  valor = valor %1

  dq = valor/5
  valor = valor %5
  
  d = valor/10
  valor = valor %10

  q = valor/50
  valor = valor %50

  c = valor/100
  valor = valor %100

  printf (”Número de:\n\n moedas de 1:%f\nNotas de 5:%f\nNotas de 10:%f\nNotas de 50:%f\nNotas de 100:%f\n“, &u, &dq, &d, &q, &c)
  return 0;
}


Desafio

#include <stdio.h>
int main () {
  float valor, n1, n2, n3, DY1, DY2, DY3;
  const m = 12

  printf (“Entre com o valor que pretende aportar:”);
  scanf (“%f”, &valor);
  printf (“Entre com a quantidade de ações que deseja comprar para cada ação:”);
  scanf (“%f%f%f”, &n1, &n2, &n3);

  //Cálculos
  DY1 = ((17/m)/(24,13*n1))*100

  DY2 = ((35/m)/(11,0*n2))*100

  DY3 = ((25/m)/(38,65*n3))*100
 
  float lucro1, lucro2, lucro3;

  lucro1 = DY1*valor
  lucro2 = DY2*valor
  lucro3 = DY3*valor

  printf (“O lucro obtido para cada ação por mês eh:\nLucro1:%f\nLucro2:%f\nLucro3:%f”, &lucro1, &lucro2, &lucro3);
  return 0;
}

