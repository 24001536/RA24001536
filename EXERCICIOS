  printf ("\nO valor de n eh: %d\n", n );   
  return 0;
  } 

B) //Exibe o valor inteiro da variável de entrada
# include < stdio .h >
 int main () { 
  int a ;
  printf ("\nDigite o valor da variavel: ”); 
  scanf (“%d”, &a); 
  printf ("\nO valor de a eh: %d ", a ); 
  return 0;
  } 

C) //Exibe o valor inteiro das variáveis “a” e “b”
# include < stdio .h >
 int main () {
  int a = 4, b = 2;
  printf ("%d", a);
  printf ("%d", b);
  return 0;
  }

